<body>
  <div class="py-4 text-center bg-secondary text-white">
    <h2>Lista de participantes</h2>
    <hr />
    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Foto</th>
          <th scope="col">Nombre</th>
          <th scope="col">Años de experiencia</th>
          <th scope="col">Especialidad</th>
          <th scope="col">Estado</th>
        </tr>
      </thead>
      <tbody>
        {{#each data}}
        <tr> 
          <th scope="row">{{this.id}}</th>
          <td><div><img src="/public/img/{{this.foto}}" alt=""></div></td>
          <td>{{this.nombre}}</td>
          <td>{{this.anos_experiencia}}</td>
          <td>{{this.especialidad}}</td>
          {{#if this.estado}}<td class="text-success font-weight-bold">Aprobado</td>{{else}}<td class="text-warning font-weight-bold">En revision</td>{{/if}}
        </tr>
        {{/each}}
      </tbody>
    </table>
    <a href="/login" class="text-white">Iniciar Sesión</a>
    |
    <a href="/registro" class="text-white">Registrarme</a>
  </div>
</body>